<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record id="se_ssh_auth_view_form" model="ir.ui.view">
        <field name="name">se.ssh.auth.view.form</field>
        <field name="model">se.ssh.auth</field>
        <field name="arch" type="xml">
            <form string="Generate/Upload SSH Key">
                <sheet>
                    <div class="oe_title mb-4">
                        <h1><field name="server" readonly="1"/></h1>
                    </div>

                    <field name="strategy" widget="radio" class="form-check-input"/>

                    <group attrs="{'invisible': [('strategy','=','upload')]}">
                        <field name="user_name"/>
                        <field name="password" password="True"/>
                    </group>

                    <group attrs="{'invisible': [('strategy','=','generate')]}">
                        <field name="ssh_key" attrs="{'required': [('strategy','=','upload')]}"/>
                        <field name="ssh_password" password="True"/>
                    </group>

                    <footer>
                        <button name="connect" string="Connect" type="object" class="btn-primary"/>
                        <button special="cancel" string="Cancel" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>