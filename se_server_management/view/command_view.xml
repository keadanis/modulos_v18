<?xml version="1.0" encoding="utf-8"?>
<!-- infrastructure.command -->
<odoo noupdate="1">
    <data>

        <!-- SEARCH VIEW -->
        <record id="view_server_command_filter" model="ir.ui.view">
            <field name="name">server.command.select</field>
            <field name="model">server.command</field>
            <field name="arch" type="xml">
                <search string="command">
                    <field name="name"/>
                    <field name="command"/>
                </search>
            </field>
        </record>

        <!-- FORMVIEW -->
        <record id="view_server_command_form" model="ir.ui.view">
            <field name="name">server.command.form</field>
            <field name="model">server.command</field>
            <field name="arch" type="xml">
                <form string="command">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" class="mb-2"/>
                            </h1>
                        </div>
                        <group>
                            <field name="name" string="Nombre" class="mb-3"/>
                            <field name="command" string="Comando" class="mb-3" placeholder="Ejemplo: sudo service apache2 restart"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- TREEVIEW CORREGIDA -->
        <record id="view_server_command_tree" model="ir.ui.view">
            <field name="name">server.command.tree</field>
            <field name="model">server.command</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="command"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>