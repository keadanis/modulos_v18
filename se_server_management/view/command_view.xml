<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Tree View - Estructura simplificada -->
        <record id="view_server_command_tree" model="ir.ui.view">
            <field name="name">server.command.tree</field>
            <field name="model">server.command</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sequence"/>
                    <field name="name"/>
                    <field name="command"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_server_command_form" model="ir.ui.view">
            <field name="name">server.command.form</field>
            <field name="model">server.command</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="sequence"/>
                            <field name="name"/>
                            <field name="command"/>
                            <field name="server_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_server_command_filter" model="ir.ui.view">
            <field name="name">server.command.search</field>
            <field name="model">server.command</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="command"/>
                    <field name="server_id"/>
                </search>
            </field>
        </record>

    </data>
</odoo>